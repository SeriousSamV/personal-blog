---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-8 pb-6">
      <h1 class="my-4 inline-block text-4xl font-bold sm:my-8 sm:text-5xl">
        Paul Samuel Vishesh
      </h1>
      <a
        target="_blank"
        href="/rss.xml"
        class="inline-block"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <IconRss
          width={20}
          height={20}
          class="scale-125 stroke-accent stroke-3"
        />
        <span class="sr-only">RSS Feed</span>
      </a>

      <p class="text-lg leading-relaxed">
        <span class="font-semibold">Software Architect & Technology Strategist</span> with 8+ years of expertise in designing scalable, robust systems and leading cross-functional teams. I specialize in advanced system architecture, performance optimization, and integrating emerging technologies like AI/ML and AR/VR.
      </p>
      <p class="mt-4 leading-relaxed">
        I bridge the gap between business and technology, enabling teams to deliver high-quality solutions that drive growth. My approach combines technical excellence with strategic thinking to solve complex challenges and create innovative products.
      </p>
      <p class="mt-4 leading-relaxed">
        Currently serving as a <span class="font-semibold">Software Architect and Team Lead</span> at Xerago, where I design enterprise-scale architectures and mentor teams of up to 30 developers.
      </p>
      <div class="mt-4">
        <LinkButton
          class="mr-4 underline decoration-dashed underline-offset-4 hover:text-accent"
          href="/about"
        >
          About Me
        </LinkButton>
        <LinkButton
          class="underline decoration-dashed underline-offset-4 hover:text-accent"
          href="/projects"
        >
          View Projects
        </LinkButton>
      </div>
      {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex flex-col sm:flex-row sm:items-center">
            <div class="mr-2 mb-1 whitespace-nowrap sm:mb-0">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>

    <Hr />

    <section id="key-achievements" class="pt-12 pb-6">
      <h2 class="text-2xl font-semibold tracking-wide mb-6">Key Achievements</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-card p-6 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-700">
          <h3 class="font-semibold text-lg mb-2">High Availability Banking Systems</h3>
          <p>Spearheaded High Availability implementation for banking clients, achieving 99.999% uptime and establishing robust Disaster Recovery protocols.</p>
        </div>
        <div class="bg-card p-6 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-700">
          <h3 class="font-semibold text-lg mb-2">AI-Driven Marketing Platform</h3>
          <p>Architected Acquigo, an AI-driven marketing automation platform, driving a 10% increase in Campaign ROI for clients.</p>
        </div>
        <div class="bg-card p-6 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-700">
          <h3 class="font-semibold text-lg mb-2">AI-Powered Avatar Assistant</h3>
          <p>Designed and implemented Augmentigo, leveraging cutting-edge animation streaming and voice synthesis technologies.</p>
        </div>
        <div class="bg-card p-6 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-700">
          <h3 class="font-semibold text-lg mb-2">AI-Powered Engagement Solutions</h3>
          <p>Delivered Respondigo, an AI-driven Q&A solution, improving website user engagement by 35% with a conversational interface.</p>
        </div>
      </div>
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
            <ul>
              {featuredPosts.map(({ data, id }) => (
                <Card
                  href={`/posts/${id}/`}
                  frontmatter={data}
                  secHeading={false}
                />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
          <ul>
            {recentPosts.map(
              ({ data, id }, index) =>
                index < SITE.postPerIndex && (
                  <Card
                    href={`/posts/${id}/`}
                    frontmatter={data}
                    secHeading={false}
                  />
                )
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 flex justify-center gap-4">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block" />
      </LinkButton>
      <LinkButton href="/projects/">
        View Projects
        <IconArrowRight class="inline-block" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
